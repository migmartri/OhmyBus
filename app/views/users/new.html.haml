.clear
.title-medium Registro
- @user.password = @user.password_confirmation = nil
.span-10
  - form_for :user, :url => users_path, :html => {:multipart => true} do |f|
    .span-4= label_tag 'Usuario:'
    .span-6.last= f.text_field :login
    .span-6.prepend-4.last= error_message_on :user, :login

    .span-4= label_tag 'Email'
    .span-6.last= f.text_field :email
    .span-6.prepend-4.last= error_message_on :user, :email

    .span-4= label_tag 'Contraseña:'
    .span-6.last= f.password_field :password
    .span-6.prepend-4.last= error_message_on :user, :password

    .span-4= label_tag 'Confirmar Contraseña:'
    .span-6.last= f.password_field :password_confirmation
    .span-6.prepend-4.last= error_message_on :user, :password_confirmation

    .span-4= label_tag "Avatar:"
    .span-6= f.file_field :avatar
    .span-3.prepend-7.last= submit_tag 'Registro'
.clear
